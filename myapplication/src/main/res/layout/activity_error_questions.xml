<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0e0e0"
    >

    <android.support.v7.widget.Toolbar
        android:elevation="4dp"
        android:id="@+id/my_toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/toolbar_color"
        android:titleTextAppearance="?android:attr/text"
        />

    <RelativeLayout
        android:layout_below="@+id/my_toolbar"
        android:id="@+id/relativeLayout_paper_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@android:color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_error_question_name"
            android:hint="Paper Name"
            />
        <LinearLayout
            android:id="@+id/linearLayout_question_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">
            <!--第几道题-->
            <TextView
                android:id="@+id/textView_error_question_index"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/blue_dark"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="1"/>

            <TextView
                android:id="@+id/textView_divide_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/darker_gray"
                android:text="/"/>
            <!--总题数-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/darker_gray"
                android:text="5"
                android:id="@+id/textView_error_question_sum"/>
        </LinearLayout>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:layout_below="@id/relativeLayout_paper_title"
        android:id="@+id/viewPager_error_questions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/relativeLayout_note"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin_half"
        android:paddingBottom="@dimen/activity_vertical_margin_half"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView_note"
            android:layout_alignParentLeft="true"
            android:text="@string/note"
            android:textColor="@android:color/darker_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentRight="true"
            android:textColor="@color/holo_blue_light"
            android:id="@+id/textView_add_edit_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_note"/>
    </RelativeLayout>

</RelativeLayout>
