<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayout_course_item"
    android:padding="@dimen/activity_horizontal_margin_half"
    android:background="@color/white"
    >

    <TextView
        android:text="Name"
        android:gravity="center"
        android:id="@+id/textView_course_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@drawable/tags_text_color_selector"
        android:textSize="12sp"
        android:layout_toLeftOf="@+id/imageView_select_course_check"
        android:layout_toStartOf="@+id/imageView_select_course_check" />

    <ImageView
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:id="@+id/imageView_select_course_check"
        android:src="@drawable/ic_check_black_12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>