<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/view_margin_half"
    android:gravity="center_vertical"
    android:background="@drawable/bg_rounded_rectangle_tran_gray">

    <LinearLayout
        android:layout_width="@dimen/paper_percent_size"
        android:layout_height="@dimen/paper_percent_size"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:background="@drawable/bg_percent_paper"
        android:id="@+id/linearLayout_papers_item_progress" />

    <TextView
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="Paper title"
        android:id="@+id/textView_papers_item" />
    
    <ImageView
        android:id="@+id/iv_drawable"
        android:layout_width="@dimen/circular_progress_radius"
        android:layout_height="@dimen/circular_progress_radius"
        android:padding="12dip"/>
</LinearLayout>
