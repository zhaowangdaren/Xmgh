<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0e0e0"
    tools:context="com.example.ustc_pc.ui.ActivityPaper">

    <android.support.v7.widget.Toolbar
        android:elevation="10dp"
        android:id="@+id/my_toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/toolbar_color"
        android:titleTextAppearance="?android:attr/text"

        />

    <RelativeLayout
        android:layout_below="@+id/my_toolbar"
        android:id="@+id/relativeLayout_paper_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@color/activity_paper_name_bar_color"
        style="@style/Base.AlertDialog.AppCompat.Light">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_question_type"
            android:hint="题型"
            android:textColor="#000"
            android:textStyle="bold" />
        <LinearLayout
            android:id="@+id/linearLayout_question_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">
            <!--第几道题-->
            <TextView
                android:id="@+id/textView_question_index"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/blue_dark"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#fff"
                android:text="/"/>
            <!--总题数-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#fff"
                android:text="5"
                android:id="@+id/textView_question_sum"/>
        </LinearLayout>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager_questions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativeLayout_paper_title"
        android:layout_above="@+id/relativeLayout_note"
        style="@style/AppThemeDark" />

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/relativeLayout_note"
        android:background="@color/white"
        android:gravity="center"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin_half"
        android:paddingBottom="@dimen/activity_vertical_margin_half"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:gravity="center_vertical"
            android:id="@+id/textView_add_edit_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_note"
            android:textColor="@color/holo_blue_light"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:singleLine="true"
            android:ellipsize="end"
            android:id="@+id/textView_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/note"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/textView_add_edit_note"
            android:layout_toStartOf="@+id/textView_add_edit_note" />

    </RelativeLayout>

    <!--No Network-->
    <LinearLayout
        android:layout_below="@id/relativeLayout_paper_title"
        android:id="@+id/linearLayout_no_network"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/no_network"/>

        <TextView
            android:layout_gravity="center_horizontal"
            android:text="@string/no_network_click_refresh"
            android:textColor="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!--Error: get paper-->
    <LinearLayout
        android:gravity="center"
        android:layout_below="@id/my_toolbar"
        android:id="@+id/linearLayout_error_retry"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:background="@android:drawable/stat_notify_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@android:color/darker_gray"
            android:text="@string/error_retry"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        </LinearLayout>

</RelativeLayout>
