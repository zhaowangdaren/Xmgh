<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:layout_gravity="center_vertical"
        android:background="@drawable/bg_circle_score_item_detail"
        android:layout_width="@dimen/view_margin"
        android:layout_height="@dimen/view_margin"
        android:id="@+id/imageView_score_detail_color" />

    <TextView
        android:layout_marginLeft="@dimen/view_margin_half"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="AssessmentScoreKp score"
        android:id="@+id/textView_score_detail_kp_score" />

    <TextView
        android:layout_gravity="center_vertical"
        android:singleLine="true"
        android:enabled="true"
        android:layout_marginLeft="@dimen/view_margin_half"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="AssessmentScoreKp name"
        android:id="@+id/textView_score_detail_kp"
        android:layout_centerVertical="true" />


</LinearLayout>