                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="12"-->
                        <!--android:textColor="#fff"-->
                        <!--/>-->
                <!--</LinearLayout>-->


            </RelativeLayout>

            <TextView
                android:layout_below="@+id/relativeLayout_menu_head_area"
                android:id="@+id/textView_drawer_nick_name"
                android:gravity="center_horizontal"
                android:text="@string/nick_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"/>

            <View
                android:id="@+id/view"
                android:layout_below="@id/textView_drawer_nick_name"
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <ListView

                android:layout_below="@id/view"
                android:id="@+id/listView_navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:choiceMode="singleChoice"
                android:divider="@android:color/transparent" android:dividerHeight="0dp"
                tools:context=".NavigationDrawerFragment"
                android:layout_alignParentBottom="true" />


        </RelativeLayout>
    </android.support.v4.widget.DrawerLayout>
