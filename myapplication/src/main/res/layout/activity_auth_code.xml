<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#e0e0e0"
    tools:context="com.example.ustc_pc.myapplication.activity.ActivityAuthCode">

    <android.support.v7.widget.Toolbar
        android:elevation="4dp"
        android:id="@+id/my_toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/toolbar_color"
        android:titleTextAppearance="?android:attr/text"
        />

    <LinearLayout
        android:layout_marginTop="@dimen/view_margin"
        android:layout_below="@id/my_toolbar"
        android:padding="@dimen/view_margin"
        android:background="#fff"
        android:id="@+id/linearLayout_auth_code_phone_number"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/phone_number"
            android:textColor="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="@dimen/view_margin"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView_auth_code_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_auth_code"
        android:padding="@dimen/view_margin"
        android:layout_marginTop="@dimen/view_margin"
        android:layout_below="@id/linearLayout_auth_code_phone_number"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">

        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/gray"
            android:text="@string/sms_auth_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/editText_auth_code_number"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            />
    </LinearLayout>
        <Button
            android:layout_below="@+id/linearLayout_auth_code"
            android:id="@+id/button_auth_code_sure"
            android:layout_margin="@dimen/view_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_style"
            android:text="@string/sure"
            android:textColor="#fff"/>

</RelativeLayout>
