<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0e0e0"
    tools:context="com.example.ustc_pc.myapplication.activity.ActivityForgetPassword">


    <RelativeLayout
        android:id="@+id/relativeLayout_username"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_below="@+id/my_toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <TextView
            android:textAppearance="@style/CustomeText"
            android:text="@string/username"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_marginLeft="@dimen/view_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText_username"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textView5"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:hint="@string/phone_number"
            android:textColorHint="@color/textColorHint"
            android:textColorHighlight="@color/editTextHightLight"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/view_margin"
        android:id="@+id/relativeLayout_auth_code"
        android:layout_below="@id/relativeLayout_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textAppearance="@style/CustomeText"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sms_auth_code"
            android:id="@+id/textView6"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_marginLeft="@dimen/view_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText_auth_code"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/textView6"
            android:textColorHint="@color/textColorHint"
            android:textColorHighlight="@color/editTextHightLight"/>
    </RelativeLayout>

    <RelativeLayout

        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:id="@+id/relativeLayout_new_password"
        android:layout_below="@id/relativeLayout_auth_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textAppearance="@style/CustomeText"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_password"
            android:id="@+id/textView7"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_marginLeft="@dimen/view_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText_new_password"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/textView7"
            android:textColorHint="@color/textColorHint"
            android:textColorHighlight="@color/editTextHightLight"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/view_margin"
        android:id="@+id/relativeLayout_confirm_new_password"
        android:layout_below="@id/relativeLayout_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textAppearance="@style/CustomeText"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirm_password"
            android:id="@+id/textView8"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_marginLeft="@dimen/view_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText_confirm_password"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/textView8"
            android:textColorHint="@color/textColorHint"
            android:textColorHighlight="@color/editTextHightLight"/>
    </RelativeLayout>

    <!--Login button-->
    <Button
        android:layout_below="@id/relativeLayout_confirm_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/button_submit"
        android:background="@drawable/button_style"
        android:layout_margin="@dimen/activity_vertical_margin" />
</RelativeLayout>
