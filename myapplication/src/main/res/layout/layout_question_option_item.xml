<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/view_margin"
    android:layout_margin="@dimen/view_margin"
    >
    <CheckedTextView
        android:id="@+id/checkedTV_option"
        android:layout_width="@dimen/option_size"
        android:layout_height="@dimen/option_size"
        android:background="@drawable/bg_half_right"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:text="A"
        android:textSize="@dimen/option_inner_text_size"
        android:textColor="#000" />

    <TextView
        android:id="@+id/textView_option_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"/>
</LinearLayout>
