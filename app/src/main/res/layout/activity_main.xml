<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout_main_view"
    >

    <android.support.v7.widget.Toolbar
        android:elevation="10dp"
        android:id="@+id/my_toolbar"
        android:layout_height="16dp"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:background="@android:color/holo_blue_light"
        />

    <FrameLayout
        android:id="@+id/frameLayout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <fragment
        android:id="@+id/fragment_left_menu"
        android:name="zy.ustc.edu.cn.xmgh.LeftMenuFragment"
        android:layout_gravity="start"
        android:layout_width="@dimen/left_menu_width"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_left_menu" />
</android.support.v4.widget.DrawerLayout>
